extends ../../layouts/default
include ../../mixins/tour-layout
include ../../mixins/slide-tour

block main 
  <section id="hero">
    <div class="hero-container" data-aos="fade-up">
      <h1>Chào mừng quý khách đến với VIETNAM TOURISM</h1>
      <h2>Khám phá những hành trình tuyệt vời tại Việt Nam cùng chúng tôi</h2>
