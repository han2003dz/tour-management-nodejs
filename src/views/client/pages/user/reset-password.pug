extends ../../layouts/auth
block main
  .container.d-flex.align-items-center.justify-content-center
    .otp.bg-light.p-4.rounded.shadow-lg.w-50
      h3.text-center Nhập mật khẩu mới
      form#reset-password-form
        .mb-3
          label.form-label(for='emailInput') Email
          input#emailInput.form-control(type='email' name='email' value=email aria-describedby='emailHelp' readonly)
          label.form-label.mt-2(for='password') Nhập mật khẩu mới
          input#password.form-control(type='password' name='password' aria-describedby='passwordHelp')
          .eye
            i(class="bi bi-eye-fill text-dark eye-pass")
          .d-flex.justify-content-between.mt-2
            p Lưu ý mật khẩu phải tối thiếu 6 ký tự.
        button.btn.btn-primary.w-100.rounded-0(type='submit') Xác nhận
block script
  script(src="/client/js/forgot-password.js")
  script(src="/client/js/eye-password.js")

