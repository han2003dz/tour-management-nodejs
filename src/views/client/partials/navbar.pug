.profile
  .avatar
    img(class="img-fluid rounded-circle" src=user.avatar)
  h1 #{user.username}
nav.nav-menu
  ul
    li
      a.nav-link.scrollto.active(href=`/info/${user.id}`)
        i(class="fa-solid fa-user")
        span Thông tin tài khoản
    li
      a.nav-link.scrollto(href=`/user/shopping-history/${user.id}`)
        i(class="fa-solid fa-clock-rotate-left")
        span Lịch sử đặt tour
    li
      a.nav-link.scrollto(href=`/user/look-up-bill/${user.id}`)
        i(class="fa-solid fa-magnifying-glass-dollar")
        span Tra cứu hóa đơn
    li
      a.nav-link.scrollto(href="/api/v1/auth/logout")
        i(class="fa-solid fa-right-from-bracket")
        span Đăng xuất