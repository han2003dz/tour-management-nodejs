extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/status.pug
include ../../mixins/selectTree.pug
block main
  h1 Thêm tour mới
  form(
    action=`${prefixAdmin}/tours/create`
    id="form-create-tour"
    method="POST"
    enctype="multipart/form-data"
    class="border border-1 p-4 me-3"
  )
    .row
      .col-5
        .row
          .form-group.mb-2 
            label(for="title" class="form-label") Tên tour *
            input.form-control(
              type="text"
              id="title"
              name="title"
            )
        .row.mb-2
          if categories
            div(class="form-group my-2")
              label(for="product_category_id" class="form-label") Danh mục
              select(
                name="product_category_id"
                id="product_category_id"
                class="form-control form-select"
              )
                option(value="") -- Chọn danh mục --
                  +select-tree(categories)
        .row
          .form-group.mb-2(upload-image)
            label(for="images" class="form-label") Ảnh
            input.form-control(
              type="file"
              class="form-control-file"
              id="images"
              name="images"
              accept="image/*"
              multiple
            )
            div(id="image-preview-container" class="mt-2")
      .col-7
        .row
          .col-6
            div(class="form-group mb-2")
              label(for="price" class="form-label") Giá gốc *
              input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"
              )
          .col-6
            div(class="form-group mb-2")
              label(for="discount" class="form-label") % Giảm giá
              input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value="0"
                min="0"
              )
        .row.mt-2
          .col-3
            div(class="form-group mb-2")
              label(for="stock" class="form-label") Số lượng tour
              input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
              )
          +status()
