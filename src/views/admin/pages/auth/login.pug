extends ../../layouts/auth
block main
  .container
    .row.px-3
      .col-lg-6.col-xl-5.card.flex-row.mx-auto.px-0
        .card-body
          h4.title.text-center.mt-4
            | Đăng nhập hệ thống
          form.form-box.px-3(
            id="loginForm"
          )
            .form-input
              span
                i(class="bi bi-envelope")
              input(type='email' name='email' placeholder='Nhập email...' tabindex='10' required='' id="email")
            .form-input
              span
                i(class="bi bi-key")
              input(type='password' id="password" name='password' placeholder='Nhập mật khẩu...' required)
              .eye
                i(class="bi bi-eye-fill text-dark eye-pass")
            .mb-3.d-flex.justify-content-between
              .custom-control.custom-checkbox
                input#cb1.custom-control-input(
                  type='checkbox' name='' class='basic_checkbox_1' checked)
                label.custom-control-label(for='cb1') Remember me
              .forget
                a.forget-link(href='#')
                  | Quên mật khẩu?
            .mb-3
              button.btn.btn-block.text-uppercase(type='submit')
                | Đăng nhập

