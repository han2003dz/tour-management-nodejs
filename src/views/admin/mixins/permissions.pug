mixin headerTable(roles)
  thead
    tr
      th Cấp quyền
      each item in roles
        th(class="text-center") #{item.title}

mixin dataName(roles)
  tr(data-name="id" class="d-none")
    td
    each item in roles
      td(class="text-center")
        input(type="text" value=item.id)

