mixin search(keyword)
  form(id="form-search")
    .input-group
      input(
        type="text"
        placeholder="Nhập từ khóa..."
        name="keyword"
        class="form-control form-control-sm"
        value=keyword
      )
      .input-group-append
        button(
          class="btn btn-success btn-sm"
          type="submit"
        ) Tìm